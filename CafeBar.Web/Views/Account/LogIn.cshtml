@model CafeBar.Entities.Viewmodels.LogInModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title> CafeBar | Log in</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/admin/2.3.6/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/admin/2.3.6/plugins/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/admin/2.3.6/plugins/ionicons/css/ionicons.min.css" />
    <link rel="stylesheet" href="~/admin/2.3.6/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/admin/2.3.6/plugins/iCheck/square/blue.css">
    <link href="~/Content/login.css" rel="stylesheet" />

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="javascript:void(0)">CafeBar Login</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <p class="" style="text-align:center;color:red;">@ViewBag.message</p>
            <form id="loginForm" action="@Url.Action("Login","Account")" method="post">
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    <span class="fa fa-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password",  autocomplete = "off"  })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe) Remember Me
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button style="margin-top: 4px;" type="submit" class="btn btn-primary btn-block btn-flat" onclick="return ValidationBasket();">Sign In</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="~/admin/2.3.6/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script src="~/admin/2.3.6/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/admin/2.3.6/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
    <script type="text/javascript">

        function ValidationBasket() {
            if ($('#Email').val().trim().length == 0) {
                $('#Email').css("border-color", "red");
                $('#Email').focus();
                return false;
            }
            else if (!EmailValidation()) return false;

            else if ($('#Password').val().trim().length == 0) {
                $('#Password').css("border-color", "red");
                $('#Password').focus();
                return false;
            }
            $('#Email').css("border-color", "#d2d6de");
            $('#Password').css("border-color", "#d2d6de");

            return true;
        }

        function EmailValidation() {
            var email = $('#Email').val();
            var re = /^(([^<>()\[\]\\.,;:\s@@"]+(\.[^<>()\[\]\\.,;:\s@@"]+)*)|(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            if (re.test(email)) {
                $('#Email').css("border-color", "#d2d6de");
                return true;
            }
            else {
                $('#Email').css("border-color", "red");
                $('#Email').focus();
                return false;
            };
        }
    </script>
</body>
</html>
